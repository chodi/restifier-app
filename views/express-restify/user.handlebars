    <div class="container">
      <form method="post" action="/update/{{user._id}}">
        <div class="form-group">
          <label>Name</label>
          <input class="form-control" type="text" name="name" value="{{user.name}}" placeholder="Name">
        </div>
        <div class="form-group">
          <label>Comment</label>
          <input class="form-control" type="text" name="comment" value="{{user.comment}}" placeholder="Comment">
